<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <title><%= results[2] %>'s Account Display Page</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>
  <body class="bg-dark text-center">
    <div class="container bg-secondary">
      <div class="row bg-dark" style="height: 5rem"></div>
      <div class="row" style="margin-left: 5rem; margin-bottom: 2rem">
        <h1 class="" style="">
          <% results[2] = results[0][0].toUpperCase() + results[2].slice(1) %>
          Hello, <%= results[0] %>. How are you today?
        </h1>
        <hr />
      </div>
      <div class="row" style="margin-left: 18rem">
        <ul class="list-group list-group-flush" style="">
          <% for (let i = 0; i < trans.length; i++) { %> <% if (i ==
          trans.length - 1) {%>
          <li
            class="list-group-item w-75 bg-secondary"
            style="margin-bottom: 5rem"
          >
            <%= trans[i] %>
          </li>
          <% } else {%>
          <li class="list-group-item w-75 bg-secondary"><%= trans[i] %></li>
          <% } %> <% } %>
        </ul>
      </div>
    </div>
  </body>
</html>
